{
  "name": "@konj-org/preact-ui",
  "license": "MIT",
  "repository": "https://github.com/konj-org/ui",
  "homepage": "https://ui.konj.org/",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "esbuild-script": "npx esbuild src/index.ts --target=node20 --bundle --minify --tree-shaking=true --format=esm --external:class-variance-authority --external:tailwind-merge --external:preact --outdir=dist",
    "esbuild-dev-script": "npx esbuild src/index.ts --target=node20 --bundle --format=esm --external:class-variance-authority --external:tailwind-merge --external:preact --outdir=dist --watch=forever",
    "build": "npx tsc && npm run esbuild-script",
    "dev": "npx tsc --watch & npm run esbuild-dev-script"
  },
  "devDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "class-variance-authority": "^0.7.0",
    "esbuild": "^0.19.5",
    "preact": "^10.18.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.0.24",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "@tailwindcss/container-queries": "^0.1.1",
    "class-variance-authority": "^0.7.0",
    "preact": "^10.18.1",
    "tailwind-merge": "^1.14.0",
    "tailwindcss": "^3.0.24"
  }
}
